@model StatusInfoViewModel

@inject Localizer Localizer
@inject ISelectListHelper SelectList

<form asp-antiforgery="true" class="m-form m-form--fit m-form--label-align-right" data-ajax-url="@Url.Action("EditStatusInfo", "Members", new { area = "Organizations" })" data-ajax="true" data-ajax-method="post" data-ajax-success="showNotification" data-ajax-update="#status-info">
    <input hidden asp-for="PersonDetail.Id" />
    <input hidden asp-for="InstitutionId" />
    <div class="m-portlet__body">
        @if (ViewData["SuccessEditStatusInfo"] != null)
        {
            if ((bool)ViewData["SuccessEditStatusInfo"])
            {
                <div class="m-alert m-alert--icon m-alert--outline alert alert-success alert-dismissible animated fadeIn mr-4 ml-4" role="alert">
                    <div class="m-alert__icon">
                        <i class="la la-check"></i>
                    </div>
                    <div class="m-alert__text">
                        @Localizer.StatusInfo @Localizer.Saved.ToLower()
                    </div>
                    <div class="m-alert__close">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
            }
        }
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="m-alert m-alert--icon m-alert--outline alert alert-danger alert-dismissible animated fadeIn mr-4 ml-4" role="alert">
                <div class="m-alert__icon">
                    <i class="la la-warning"></i>
                </div>
                <div class="m-alert__text">
                    @Html.ValidationSummary()
                </div>
                <div class="m-alert__close">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        }
        <div class="row">
            <div class="col-xl-12">
                <div class="m-form__section m-form__section--first">
                    <div class="m-form__heading">
                        <h3 class="m-form__heading-title">@Localizer.StatusDetails</h3>
                    </div>
                    <div class="row col-lg-12">
                        <div class="form-group m-form__group col-lg-12 pt-0 pb-0">
                            <label class="form-control-label">* @Localizer.SelectMembershipType:</label>
                        </div>
                        <div class="form-group m-form__group col-lg-6 pt-0">
                            <div class="text-center">
                                <a class="btn btn-secondary btn-sm col-lg-12">
                                    <label class="m-checkbox m-checkbox--air m-checkbox--state-success m-0">
                                        <input type="checkbox" asp-for="Employer"> @Localizer.Employer
                                        <span></span>
                                    </label>
                                </a>
                            </div>
                        </div>
                        <div class="form-group m-form__group col-lg-6 pt-0">
                            <div class="text-center">
                                <a class="btn btn-secondary btn-sm col-lg-12">
                                    <label class="m-checkbox m-checkbox--air m-checkbox--state-success m-0">
                                        <input type="checkbox" asp-for="Member"> @Localizer.MemberOfChember
                                        <span></span>
                                    </label>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="row col-lg-12">
                        <div class="col-lg-6 form-group m-form__group pt-0">
                            <label class="form-control-label"> @Localizer.MaritalStatus</label>
                            <select class="form-control m-bootstrap-select m_selectpicker" asp-for="PersonDetail.MartialStatusId" asp-items="@SelectList.MartialStatuses(true)"></select>
                        </div>
                        <div class="col-lg-6 form-group m-form__group pt-0">
                            <label class="form-control-label"> @Localizer.EmploymentStatus</label>
                            <select class="form-control m-bootstrap-select m_selectpicker" asp-for="PersonDetail.EmploymentStatusId" asp-items="@SelectList.EmployementStatuses(true)"></select>
                        </div>
                    </div>
                    <div class="row col-lg-12">
                        <div class="col-lg-6 form-group m-form__group pt-0">
                            <label class="form-control-label">* @Localizer.AcademicDegree:</label>
                            <select class="form-control m-bootstrap-select m_selectpicker" asp-for="PersonDetail.AcademicDegreeId" asp-items="@SelectList.AcademicDegrees(true)"></select>
                        </div>
                        <div class="col-lg-6 form-group m-form__group pt-0">
                            <label class="form-control-label"> @Localizer.AcademicTitle:</label>
                            <select class="form-control m-bootstrap-select m_selectpicker" asp-for="PersonDetail.AcademicTitleId" asp-items="@SelectList.AcademicTitles(true)"></select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="m-portlet__foot m-portlet__foot--fit">
        <div class="m-form__actions">
            <div class="row col-lg-12">
                <div class="col-sm-6 form-group m-form__group pt-0 text-right">
                    <button type="submit" class="btn btn-accent m-btn m-btn--air m-btn--custom">@Localizer.SaveChanges</button>&nbsp;&nbsp;
                </div>
                <div class="col-sm-6 form-group m-form__group pt-0 text-left">
                    <button type="reset" class="btn btn-secondary m-btn m-btn--air m-btn--custom">@Localizer.Cancel</button>
                </div>
            </div>
        </div>
    </div>
</form>
<script src="~/demo/default/custom/crud/forms/widgets/bootstrap-select.js" type="text/javascript"></script>

