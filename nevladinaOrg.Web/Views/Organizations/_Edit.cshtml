@inject Localizer Localizer


<div id="m_modal_2" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="modal" style="display: none;" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
        <div class="modal-content" id="divBasicModalUpdate">

            <form  asp-controller="Organizations" asp-action="Edit" 
                  data-ajax-begin="onBegin" 
                  data-ajax-complete="onComplete" 
                  data-ajax-failure="onFailed" 
                  data-ajax-success="onSuccess"
                  data-ajax="true" 
                  data-ajax-method="POST">

                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="recipient-name" class="form-control-label">@Localizer.NameOfAcademicDegree</label>
                        <input type="hidden" name="Id" class="form-control" id="organizationAuthIdID" value="">
                        <input type="text" name="name" class="form-control" id="organizationAuthNameID" value="">
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="close" type="button" class="btn btn-secondary" data-dismiss="modal">@Localizer.Close</button>
                    <button id="save" type="submit" class="btn btn-primary">@Localizer.Save</button>
                </div>
            </form>

        </div>

    </div>
</div>