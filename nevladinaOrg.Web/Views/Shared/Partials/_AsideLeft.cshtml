                    <i class="m-menu__link-icon flaticon-layers"></i>
                    <span class="m-menu__link-text">@Localizer.Institutions</span>
                    <i class="m-menu__ver-arrow la la-angle-right"></i>
                </a>
                <div class="m-menu__submenu ">
                    <span class="m-menu__arrow"></span>
                    <ul class="m-menu__subnav">
                        <li class="m-menu__item  m-menu__item--parent" aria-haspopup="true">
                            <span class="m-menu__link">
                                <span class="m-menu__link-text">@Localizer.InstitutionalSettings</span>
                            </span>
                        </li>
                        <li class="m-menu__item " aria-haspopup="true">
                            <a href="@Url.Action("General", "InstitutionalSettings", new { area = nameof(nevladinaOrg.Web.Areas.Administration) })" class="m-menu__link ">
                                <i class="m-menu__link-bullet m-menu__link-bullet--dot">
                                    <span></span>
                                </i>
                                <span class="m-menu__link-text">@Localizer.General</span>
