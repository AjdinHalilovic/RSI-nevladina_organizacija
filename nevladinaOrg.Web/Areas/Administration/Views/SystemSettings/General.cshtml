
@inject Localizer Localizer

@{
    ViewData["Title"] = Localizer.General;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/app/css/custom.css" rel="stylesheet" type="text/css" />

<div class="m-portlet m-portlet--head-sm m-portlet--tabs" m-portlet="true" style="">
    <div class="m-portlet__head">
        <div class="m-portlet__head-caption">
            <div class="m-portlet__head-title">
                <span class="m-portlet__head-icon">
                    <i class="flaticon-cogwheel-1"></i>
                </span>
                <h3 class="m-portlet__head-text">
                    @Localizer.General
                </h3>
            </div>
        </div>
        <div class="m-portlet__head-tools">
            <ul class="m-portlet__nav">
                <li class="m-portlet__nav-item">
                    @*m-portlet-tool="reload"*@
                    <a href="@Url.Action("General", "SystemSettings", new { area = "Administration" })" class="m-portlet__nav-link m-portlet__nav-link--icon">
                        <i class="la la-refresh"></i>
                    </a>
                    <div class="m-tooltip m-tooltip--portlet tooltip bs-tooltip-top" role="tooltip" id="tooltip_96nmbb2r8k" aria-hidden="true" x-placement="bottom" style="position: absolute; will-change: transform; display: none; top: 0px; left: 0px; transform: translate3d(650px, 42px, 0px);">                            <div class="tooltip-arrow arrow" style="left: 0px;"></div>                            <div class="tooltip-inner">@Localizer.Reload</div>                        </div>
                </li>
                <li class="m-portlet__nav-item">
                    <a href="" m-portlet-tool="fullscreen" class="m-portlet__nav-link m-portlet__nav-link--icon">
                        <i class="la la-expand"></i>
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <!--begin::Tab content-->
    <div class="m-portlet__body">
        <div class="row">
            <div class="col-xl-3 col-lg-4 p-0">
                <div class="m-tabs" data-tabs="true" data-tabs-contents="#m_sections">
                    <ul class="m-nav m-nav--active-bg m-nav--active-bg-padding-lg m-nav--font-lg m-nav--font-bold m--margin-bottom-20 m--margin-top-10" id="m_nav" role="tablist">
                        <li class="m-nav__item">
                            <a class="m-nav__link m-tabs__item m-tabs__item--active" data-tab-target="#subtab_2_6_1" href="#">
                                <span class="m-nav__link-text"><i class="fa flaticon-file margin-right-10"></i> @Localizer.AcademicDegrees </span>
                            </a>
                        </li>
                        <li class="m-nav__item">
                            <a class="m-nav__link m-tabs__item" data-tab-target="#subtab_2_6_2" href="#">
                                <span class="m-nav__link-text"><i class="fa flaticon-profile margin-right-10"></i> @Localizer.AcademicTitles </span>
                            </a>
                        </li>
                        <li class="m-nav__item">
                            <a class="m-nav__link m-tabs__item" data-tab-target="#subtab_2_6_3" href="#">
                                <span class="m-nav__link-text"><i class="fa flaticon-infinity margin-right-10"></i> @Localizer.MaritalStatuses </span>
                            </a>
                        </li>
                        <li class="m-nav__item">
                            <a class="m-nav__link m-tabs__item" data-tab-target="#subtab_2_6_4" href="#">
                                <span class="m-nav__link-text"><i class="fa flaticon-chat margin-right-10"></i> @Localizer.ContactTypes </span>
                            </a>
                        </li>
                        
                        <li class="m-nav__item">
                            <a class="m-nav__link m-tabs__item" data-tab-target="#subtab_2_6_7" href="#">
                                <span class="m-nav__link-text"><i class="fa flaticon-placeholder margin-right-10"></i> @Localizer.Roles </span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>


            <div class="col-xl-9 col-lg-8">
                <div class="m-tabs-content" id="m_sections">
                    <div class="m-tabs-content__item" id="subtab_2_6_1">
                        @{ await Html.RenderPartialAsync("../AcademicDegrees/_Index"); }
                    </div>
                    <div class="m-tabs-content__item" id="subtab_2_6_2">
                        @{ await Html.RenderPartialAsync("../AcademicTitles/_Index"); }
                    </div>
                    <div class="m-tabs-content__item" id="subtab_2_6_3">
                        @{ await Html.RenderPartialAsync("../MaritalStatuses/_Index"); }
                    </div>
                    <div class="m-tabs-content__item" id="subtab_2_6_4">
                        @{ await Html.RenderPartialAsync("../ContactTypes/_Index"); }
                    </div>
                    @*<div class="m-tabs-content__item" id="subtab_2_6_7">
                        @{ await Html.RenderPartialAsync("../Roles/_Index"); }
                    </div>*@
                </div>
            </div>
        </div>
    </div>
    <!--end::Tab content-->
</div>
<script src="~/demo/default/custom/crud/metronic-datatable/base/record-selection.js" type="text/javascript"></script>
<script>
    $('.m-tabs__item').on('click', function (e) {
        $(document).ready(function () {
            $(".m-tabs-content__item--active .m_datatable").mDatatable("redraw");
        });
    });
</script>