@model IEnumerable <NevladinaOrganizacija.Areas.Administration.Models.Citizenship>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p class="btn btn-success">
        @Html.ActionLink("Add", "Add", "Citizenship", new { id = 10 })
    </p>
    <table class="table table-striped table-hover table-responsive">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Country)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nationality)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nationality)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a> |
                    <a href='@Url.Action("Delete","Citizenship", new { id = item.Id})' class="btn btn-danger">Delete</a>
                </td>
            </tr>
            }
        </tbody>
</table>